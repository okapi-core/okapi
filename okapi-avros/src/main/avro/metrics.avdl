@namespace("org.okapi.metrics.avro")
protocol Metrics {
	enum AggregationType {
		SECONDLY, MINUTELY, HOURLY
	}

	record MetricRow {
		string metric;
		map<string> tags;
		long timestamp;
		// aggregated fields
		float sum;
		float stddev;
		int count;
		float min;
		float max;
		float p25;
		float p50;
		float p75;
		float p90;
		float p99;

		// aggregation tyep
		AggregationType aggType;
	}
}
